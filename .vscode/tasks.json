{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "DelLocal",
            "type": "shell",
            "command": "rm -rf ~/.local/share/TextureJinn",
            "problemMatcher": []
        },
        {
            "label": "MakeLocal",
            "type": "shell",
            "command": "mkdir -p ~/.local/share/TextureJinn/",
            "problemMatcher": []
        },
        {
            "label": "CopyAssets",
            "type": "shell",
            "command": "cp -r Assets ~/.local/share/TextureJinn/",
            "problemMatcher": []
        },
        {
            "label": "build",
            "group": "build",
            "command": "dotnet",
            "type": "process",
            "dependsOn": ["DelLocal", "MakeLocal", "CopyAssets"],
            "dependsOrder": "sequence",
            "args": [
                "build",
                "${workspaceFolder}/TextureJinn.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-linux64-osx64-win64",
            "group": "build",
            "command": "dotnet publish -r linux-x64 && dotnet publish -r win-x64 && dotnet publish -r osx-x64 && rm -rf obj/ && dotnet restore",
            "type": "shell",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/TextureJinn.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/TextureJinn.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}